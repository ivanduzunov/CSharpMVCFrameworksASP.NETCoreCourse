@model UserProfileViewModel
@{
    ViewData["Title"] = "UserProfile";
}

<h2>UserProfile</h2>
<h2>Username: @Model.Username</h2>
<h3>Email: @Model.Email</h3>
<h3>Phone: <i>@Model.Phone</i></h3>
<h3>Cameras: @($"{Model.CamerasInStock} in stock/{Model.CamerasOutOfStock} out of stock")</h3>

@foreach (var camera in Model.Cameras)
{
    <div class="table-bordered">
        <img src="@camera.ImageUrl" height="150" width="150" />
        <h3>@($"{camera.Make} {camera.Model}")</h3>
        <h4>@($"${camera.Price}")</h4>
        <a href="/cameras/details/@camera.Id">Details</a>
        @if (camera.IsInStock)
        {
            <h3 style="color:forestgreen; text-underline-position:auto">IS IN STOCK</h3>
        }
        else
        {
            <h3 style="color:red; text-underline-position:auto">OUT OF STOCK</h3>
        }

        <a class="btn btn-default btn-sm" href="/cameras/edit/@camera.Id">Edit</a>
        <a class="btn btn-warning btn-sm" href="/cameras/delete/@camera.Id">Delete</a>
    </div>
}


