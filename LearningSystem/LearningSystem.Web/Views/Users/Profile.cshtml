@model UserProfileServiceModel
@{
    ViewData["Title"] = $"{Model.Name}'s profile";
}
<h2>@ViewData["Title"]</h2>
<hr />
<h3>@Model.Name - @Model.Birthdate.ToShortDateString()</h3>

@if (Model.UserName == User.Identity.Name)
{
    <a class="btn btn-success" asp-area="" asp-controller="Manage" asp-action="Index">Edit Profile</a>
}
<br />
<table class="table table-bordered table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Course
            </th>
            <th>
                Grade
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
            {
            <tr>
                <td>
                   <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id">@course.Name</a>
                </td>
                <td>
                    @(course.Grade.ToString())
                </td>
            </tr>
        }
    </tbody>
</table>
