@model IEnumerable<SectionListingServiceModel>

@{
    ViewData["Title"] = "Index";
}
<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome to The Underground Station Forum!</h1>
    <h3 class="text-center">The voice of the underground community</h3>
</div>
@if (User.IsInRole(WebConstants.ForumModeratorRole))
{
    <a href="/Forum/Sections/Create" class="btn btn-success">Add Section</a>
}

<div class="jumbotron">
    <h3>Sections</h3>
   <ul>
       @foreach (var item in Model)
            {
   
          <li>
              <a href="@($"/Forum/Sections/Details/{item.Id}")"><h2>@item.Tittle</h2></a>
              <h4>@item.Description</h4>
              <h5>Themes: @(item.Themes.Where(t => t.IsDeleted == false).Count())</h5>
          </li>            

       }
   </ul>
        
           

</div>
