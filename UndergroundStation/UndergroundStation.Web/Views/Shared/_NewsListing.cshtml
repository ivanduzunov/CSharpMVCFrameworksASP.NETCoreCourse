@model IEnumerable<NewsListingServiceModel>

<div class="row">
    <div class="col-md-6">
        <ul class="list-group article-list">
            @foreach (var article in Model)
            {
                <li class="list-group-item">
                    <span>@article.ArticleType.ToString()</span>
                    <br />
                    <a asp-action="Details" asp-route-id="@article.Id">@article.Title</a>
                    <br />
                    <small>published on @article.PublishedDate.ToShortDateString() at @article.PublishedDate.ToShortTimeString()</small>
                </li>
            }
        </ul>
    </div>
</div>
