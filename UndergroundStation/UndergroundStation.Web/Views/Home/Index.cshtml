@model NewsListingModel
@{
    ViewData["Title"] = "Home Page";
}

@{
    var news = Model.News.ToList();
}
<div class="jumbotron home-jumbotron">
    <h1 class="text-center">Welcome The Underground Station!</h1>
</div>

@if (User.IsInRole(WebConstants.AuthorRole))
{
    <a class="btn btn-default" href="/author/articles/create">Add Article</a>
    <br />
}


@if (news.Count() >= 4)
{
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>





        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="@(news[0].ImageUrl)" alt="News" class="img-responsive" height="800" width="1200" />
                <div class="carousel-caption" role="option">
                    <p>
                        @(news[0].Title)
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>

            <div class="item">
                <img src="@(news[1].ImageUrl)" alt="News" class="img-responsive" height="800" width="1200"  />
                <div class="carousel-caption" role="option">
                    <p>
                        @(news[1].Title)
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>

            <div class="item">
                <img src="@(news[2].ImageUrl)" alt="News" class="img-responsive" height="800" width="1200"  />
                <div class="carousel-caption" role="option">
                    <p>
                        @(news[2].Title)
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>

            <div class="item">
                <img src="@(news[3].ImageUrl)" alt="News" class="img-responsive" height="800" width="1200" />
                <div class="carousel-caption" role="option">
                    <p>
                        @(news[3].Title)
                        <a class="btn btn-success" href="https://go.microsoft.com/fwlink/?LinkID=525028&clcid=0x409">
                            Learn More
                        </a>
                    </p>
                </div>
            </div>
        </div>


        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

