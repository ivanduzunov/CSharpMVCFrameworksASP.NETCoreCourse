@model PartsListModel
@{
    ViewData["Title"] = "All Parts";
}
<h2>@ViewData["Title"]</h2>
<br />
<a class="btn btn-default" style="background-color: blue; color:antiquewhite" href="/parts/create">Add Part</a>
<br />
<table class="table table-bordered table table-hover">
    <thead>
        <tr>
            <td>
                Name
            </td>
            <td>
                Price
            </td>
            <td>
                Quantity
            </td>
            <td>
                Supplier
            </td>
            <td>
              
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var part in Model.Parts)
        {
            <tr>
                <td>
                    @part.Name
                </td>
                <td>
                    @part.Price.ToString("F2")
                </td>
                <td>
                    @part.Quantity
                </td>
                <td>
                    @part.SupplierName
                </td>
                <td>
                    <a class="btn btn-danger" href=@($"/parts/delete/{part.Id}")>Delete</a>
                    <a class="btn btn-warning" href=@($"/parts/edit/{part.Id}")>Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
