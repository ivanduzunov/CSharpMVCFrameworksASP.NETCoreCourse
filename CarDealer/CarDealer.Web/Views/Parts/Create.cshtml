@model PartsFormModel
@{
    ViewData["Title"] = "Create Part";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" id="name">
                <span asp-validation-for="Name" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price">Price</label>
                <input asp-for="Price" class="form-control" id="name">
                <span asp-validation-for="Price" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity">Quantity</label>
                <input asp-for="Quantity" class="form-control" id="name">
                <span asp-validation-for="Quantity" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupplierId">Quantity</label>
               <select asp-for="SupplierId" asp-items="Model.Suppliers"></select>
                <span asp-validation-for="Quantity" class="form-text text-danger"></span>
            </div>
           
            <input type="submit" class="btn btn-success" value="Add Part" />
        </form>
    </div>
</div>
