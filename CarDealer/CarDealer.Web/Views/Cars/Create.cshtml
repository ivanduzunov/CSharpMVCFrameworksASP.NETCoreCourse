@model CarsFormModel
@{
    ViewData["Title"] = "Add New Car";
}
<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="Make"></label>
                <input asp-for="Make" class="form-control" id="name">
                <span asp-validation-for="Make" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Model"></label>
                <input asp-for="Model" class="form-control" id="name">
                <span asp-validation-for="Model" class="form-text text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TravelledDistance"></label>
                <input asp-for="TravelledDistance" class="form-control" id="name">
                <span asp-validation-for="TravelledDistance" class="form-text text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PartsIds"></label>
                <select asp-for="PartsIds" asp-items="Model.Parts"></select>
                <span asp-validation-for="Parts" class="form-text text-danger"></span>
            </div>
            <input type="submit" class="btn btn-success" value="Add Car" />
        </form>
    </div>
</div>